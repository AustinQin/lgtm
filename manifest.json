{
  "manifest_version": 3,
  "name": "GitCode Quick Comment",
  "version": "1.0",
  "description": "Add quick comment buttons (/lgtm and /approve) to GitCode pull request pages",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://gitcode.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://gitcode.com/*/pull/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "GitCode Quick Comment"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}